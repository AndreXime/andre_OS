---
import Layout from "../../layout/Layout.astro";
import Header from "@/components/layout/Header.astro";
import { getPostBySlug } from "@/database/post/queries";
import { ChevronLeft } from "lucide-preact";
import { loadTool } from "@/tools";

const { slug } = Astro.params;

const post = await getPostBySlug(slug || "");
const Tool = await loadTool(post?.tool_name || "");

if (!Tool || !post) {
    return Astro.redirect("/");
}

Astro.response.headers.set(
    "Cache-Control",
    "public, max-age=60, s-maxage=600, stale-while-revalidate=30",
);
---

<Layout title={post.title + " | andre_OS"}>
    <div class="min-h-screen relative" id="app-root">
        <Header searchParam={""} filterParam={""} />

        <div class="pt-20 px-4 mx-auto grid grid-cols-1 gap-8 transition-all">
            <main class={`flex col-span-full`}>
                <div class="flex flex-col w-full">
                    <div class="mb-6 flex items-center gap-4 flex-shrink-0">
                        <a
                            href="/"
                            class="flex items-center gap-2 px-3 py-1.5 rounded-md bg-zinc-900 border border-zinc-800 hover:border-zinc-600 hover:bg-zinc-800 text-sm transition-colors text-zinc-400 hover:text-white group"
                        >
                            <ChevronLeft
                                size={16}
                                class="group-hover:-translate-x-0.5 transition-transform"
                            />
                            Home
                        </a>
                        <div class="h-4 w-px bg-zinc-800"></div>
                        <div
                            class="flex items-center gap-2 text-xs font-mono text-zinc-500"
                        >
                            <span>
                                ~/{post.type}s/{post.slug}
                            </span>
                        </div>
                    </div>
                    <Tool />
                </div>
            </main>
        </div>
    </div>
</Layout>
