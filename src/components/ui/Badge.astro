---
interface Props {
  text: string;
  color?: "zinc" | "emerald" | "blue" | "violet";
}

const { text, color = "zinc" } = Astro.props;

const styles = {
  zinc: "bg-zinc-800 text-zinc-400 border-zinc-700",
  emerald: "bg-emerald-950/30 text-emerald-400 border-emerald-900/50",
  blue: "bg-blue-950/30 text-blue-400 border-blue-900/50",
  violet: "bg-violet-950/30 text-violet-400 border-violet-900/50",
};

const className = styles[color] || styles.zinc;
---

<span
  class={`px-2 py-0.5 text-[10px] font-mono border rounded-sm uppercase tracking-wider ${className}`}
>
  {text}
</span>
